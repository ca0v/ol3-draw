{
  "name": "ol3-draw",
  "version": "5.1.3",
  "description": "OpenLayers Feature Editing",
  "main": "index.js",
  "scripts": {
    "clean": "rm built/** -rf",
    "update": "npm install ol3-fun ol3-symbolizer",
    "build-for-amd": "tsc -p tsconfig.json --outFile built/index.max.js",
    "build-for-examples": "tsc -p examples/tsconfig.json --outFile ./built/examples.max.js",
    "live-for-tests": "live-server --port=5000 --wait=200 --watch=./built/*.max.js --open=\"./loaders/tests.html?theme=dark&debug=1\" --browser=CHROME",
    "dev-for-examples": "npm run build-for-examples && start npm run live-for-tests && start npm run build-for-examples -- -w",
    "examples": "npm run build-for-examples && npm run live-for-tests",
    "build-for-tests": "tsc -p tests/tsconfig.json --outFile ./built/tests.max.js",
    "build-for-loaders": "tsc -p loaders/tsconfig.json --outDir ./built/loaders",
    "live-for-tests": "live-server --port=5000 --wait=200 --watch=./built/*.max.js --open=\"./loaders/tests.html?theme=dark&debug=1&test=*\" --browser=CHROME",
    "dev-for-tests": "npm run build-for-tests && start npm run live-for-tests && npm run build-for-tests -- -w",
    "tests": "npm run dev-for-tests",
    "build": "npm run build-for-loaders && npm run build-for-amd && npm run build-for-tests && npm run build-for-examples",
    "install": "npm run build-for-amd",
    "before-push": "npm run clean && npm run build && mv built/index.max.d.ts built/index.d.ts && npm run live-for-tests",
    "test": "npm run build-for-tests && npm run live-for-tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ca0v/ol3-draw.git"
  },
  "author": "coreyalix@hotmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ca0v/ol3-draw/issues"
  },
  "homepage": "https://github.com/ca0v/ol3-draw#readme",
  "devDependencies": {
    "@types/jquery": "^3.3.6",
    "@types/mocha": "^5.2.5",
    "@types/openlayers": "^4.6.12",
    "@types/proj4": "^2.3.4",
    "@types/requirejs": "^2.1.31",
    "live-server": "^1.2.0",
    "mocha": "^5.2.0",
    "ol3-fun": "https://github.com/ca0v/ol3-fun/tarball/v5.1.3",
    "ol3-symbolizer": "https://github.com/ca0v/ol3-symbolizer/tarball/v5.1.3",
    "proj4": "^2.5.0",
    "typescript": "^3.0.3"
  },
  "dependencies": {
    "jquery": "^3.3.1"
  }
}
