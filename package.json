{
  "name": "ol3-draw",
  "version": "5.1.3",
  "description": "OpenLayers Feature Editing",
  "main": "index.js",
  "scripts": {
    "clean": "rm built/** -rf",
    "build-for-amd": "tsc -p tsconfig.json --outFile built/index.max.js",
    "build-for-examples": "tsc -p examples/tsconfig.json --outFile ./built/examples.max.js",
    "live-for-examples": "live-server --port=5001 --wait=200 --watch=./built/examples.max.js --open=./loaders/examples.html --browser=CHROME",
    "dev-for-examples": "npm run build-for-examples && start npm run live-for-examples && start npm run build-for-examples -- -w",
    "examples": "npm run build-for-examples && npm run live-for-examples",
    "build-for-tests": "tsc -p tests/tsconfig.json --outFile ./built/spec/index.js",
    "build-for-loaders": "tsc -p loaders/tsconfig.json --outDir ./built/loaders",
    "live-for-tests": "live-server --port=5000 --wait=200 --watch=./built/spec/index.js --open=./loaders/tests.html --browser=CHROME",
    "dev-for-tests": "npm run build-for-tests & start npm run live-for-tests & npm run build-for-tests -- -w",
    "tests": "npm run dev-for-tests",
    "build": "npm run build-for-loaders && npm run build-for-amd && npm run build-for-tests && npm run build-for-examples",
    "install": "npm run build-for-amd",
    "before-push": "npm run clean && npm run build && mv built/index.max.d.ts built/index.d.ts",
    "test": "npm run before-push && npm run live-for-tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ca0v/ol3-draw.git"
  },
  "author": "coreyalix@hotmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ca0v/ol3-draw/issues"
  },
  "homepage": "https://github.com/ca0v/ol3-draw#readme",
  "devDependencies": {
    "@types/jquery": "^3.3.6",
    "@types/mocha": "^5.2.5",
    "@types/openlayers": "^4.6.12",
    "@types/proj4": "^2.3.4",
    "@types/requirejs": "^2.1.31",
    "live-server": "^1.2.0",
    "mocha": "^5.2.0",
    "ol3-fun": "https://github.com/ca0v/ol3-fun/tarball/v5.1.3",
    "ol3-symbolizer": "https://github.com/ca0v/ol3-symbolizer/tarball/v5.1.3",
    "proj4": "^2.5.0",
    "typescript": "^3.0.3"
  },
  "dependencies": {}
}
